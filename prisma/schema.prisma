generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id  String @id  @default(cuid()) 
  firstName String 
  lastName String
  Email String @unique
  contact String
  country String
  createdAt DateTime @default(now())
  updateAt DateTime
  role Role @default(USER)
}

enum Role {
  USER
  ADMIN
  BLOCK
  GUESS
}

model Product{
  id String @id @default(cuid())
  label String
  description String
  image String
  price BigInt
  category String 
}

model Cart {
  id String @id @default(cuid())
  totalItems BigInt @default(0)
  sumOfPrice BigInt @default(0)
  products : CartItem[]  
}

model CartItem {
  id String @id @default(cuid())
  label String
  cartId String 
  cart Cart @relation(field: [cartId], refrences: [id])
  image String
  price BigInt
  count Int @default(0)
}
generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") 
}

model User {
  id  String @id  @default(cuid()) 
  firstName String 
  lastName String
  email String @unique
  contact Int
  country String
  createdAt DateTime @default(now())
  updateAt DateTime
  role Role @default(USER)
  cartId String @unique
  cart Cart?
}


model Product{
  id String @id @default(cuid())
  label String
  description String
  image String
  price BigInt
  category String 
}

model Cart {
  id String @id @default(cuid())
  totalItems BigInt @default(0)
  sumOfPrice BigInt @default(0)
  cartItems  CartItem[]  
  userId String @unique
  user User @relation(fields: [userId],references: [id])
}
model CartItem{
  id String @id @default(cuid())
  label String
  cartId String @unique
  image String
  price BigInt
  count Int @default(0)
  cart Cart @relation(fields: [cartId],references: [id])
}

enum Role {
  USER
  ADMIN
}